<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="example_colored_box">
	
	<xacro:include filename="$(find urdf_colored_link)/colored_link.urdf.xacro" />
	
	<xacro:colored_link name="box" color="0 0.8 0" transparency="0.3">
		<visual>
			<geometry>
				<box size="1 1 1" />
			</geometry>
			<origin xyz="0 0 0" rpy="0 0 0" />
		</visual>
		<other>
			<collision>
				<geometry>
					<box size="2 2 2" />
				</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				<contact_coefficients mu="0.0005" kp="5884" kd="1.03e-7" />
			</collision>
			<inertial>
				<mass value="1000" />
				<origin xyz="0 0 0" />
				<inertia ixx="166.6" ixy="0" ixz="0" iyy="166.6" iyz="0" izz="166.6" />
			</inertial>
		</other>
	</xacro:colored_link>
	
</robot>